{% if variante.pictos %}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,500,1,0" />
<style>
    .pictos {
        display: grid;
        gap: 1rem;
        grid-template-columns: 1fr 1fr;
        text-align: center;
        margin-bottom: 4rem;
    }

    .picto {
        margin-bottom: 20px;
    }

    .picto_img {
        font-size: {% if variante.picto_font_size %}{{ variante.picto_font_size }}{% else %}3em{% endif %} !important;
        margin-bottom: 10px;
        {% if variante.pictos_color %}color: {{ variante.pictos_color }};{% endif %}
    }

    .picto_text {
        line-height: 1.5em;
    }

    /* Tablettes en orientation portrait */
    @media (min-width: 600px) and (max-width: 899px) and (orientation: portrait) {

    }

    /* Tablettes en orientation paysage */
    @media (min-width: 600px) and (max-width: 899px) and (orientation: landscape) {

    }

    /* Desktop et grands écrans */
    @media (min-width: 900px) {
        .pictos {
            display: grid;
            gap: 1rem;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            text-align: center;
            margin-bottom: 20px;
        }
    }
</style>
<div class="pictos">
    {% for picto in variante.pictos %}
    <div class="picto">
        <div class="picto_img material-symbols-rounded">{{ picto.picto_name }}</div>
        <div class="picto_text">{{ picto.picto_text | safe }}</div>
    </div>
    {% endfor %}
</div>
{% endif %}